.mdl-cell.mdl-cell--4-col-phone.mdl-cell--4-col-tablet(style="position: relative")
    .input__label.mdl-textfield__label Ваш День рождения
    .input-container
        .input-field.input-field--25p.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
            .mdl-selectfield
                select(name="birth_day")
                    option(value="" disabled selected style="display: none") День
                    - var n = 1
                    while n <= 31
                        option(value= n)= n
                        - n++

        .input-field.input-field--40p.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
            .mdl-selectfield
                select(name="birth_month")
                    option(value="" disabled selected style="display: none") Месяц
                    option(value="1") Январь
                    option(value="2") Февраль
                    option(value="3") Март
                    option(value="4") Апрель
                    option(value="5") Май
                    option(value="6") Июнь
                    option(value="7") Июль
                    option(value="8") Август
                    option(value="9") Сентябрь
                    option(value="10") Октябрь
                    option(value="11") Ноябрь
                    option(value="12") Декабрь


        .input-field.input-field--25p.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
            .mdl-selectfield
                select(name="birth_year")
                    option(value="" disabled selected style="display: none") Год
                    option(value="1991") 1991
                    option(value="1992") 1992
                    option(value="1993") 1993
                    option(value="1994") 1994
                    option(value="1995") 1995
                    option(value="1996") 1996
                    option(value="1997") 1997

